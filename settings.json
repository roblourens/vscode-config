{
	"diffEditor.renderSideBySide": false,
	"diffEditor.ignoreTrimWhitespace": false,

    "files.trimTrailingWhitespace": true,

    "workbench.editor.showTabs": false,

    "editor.cursorBlinking": "solid",

    "editor.snippetSuggestions": "bottom",

    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,

    "terminal.integrated.commandsToSkipShell": [
        // Defaults
        "editor.action.toggleTabFocusMode",
        "workbench.action.debug.continue",
        "workbench.action.debug.restart",
        "workbench.action.debug.run",
        "workbench.action.debug.start",
        "workbench.action.debug.stop",
        "workbench.action.openNextRecentlyUsedEditorInGroup",
        "workbench.action.openPreviousRecentlyUsedEditorInGroup",
        "workbench.action.quickOpen",
        "workbench.action.showCommands",
        "workbench.action.terminal.clear",
        "workbench.action.terminal.copySelection",
        "workbench.action.terminal.focus",
        "workbench.action.terminal.focusNext",
        "workbench.action.terminal.focusPrevious",
        "workbench.action.terminal.kill",
        "workbench.action.terminal.new",
        "workbench.action.terminal.paste",
        "workbench.action.terminal.runSelectedText",
        "workbench.action.terminal.scrollDown",
        "workbench.action.terminal.scrollDownPage",
        "workbench.action.terminal.scrollToBottom",
        "workbench.action.terminal.scrollToTop",
        "workbench.action.terminal.scrollUp",
        "workbench.action.terminal.scrollUpPage",
        "workbench.action.terminal.toggleTerminal",

        // Additions
        "workbench.action.openRecent",
        "workbench.action.debug.start",
        "workbench.action.debug.run",
        "workbench.action.debug.continue",
        "workbench.action.debug.restart",
        "workbench.action.debug.stepBack",
        "workbench.action.debug.stepOut",
        "workbench.action.debug.stepOver",
        "workbench.action.debug.stop",
        "workbench.action.debug.stepOver",
        "workbench.action.closeMessages",
        "workbench.action.tasks.terminate",
        "workbench.action.openNextRecentlyUsedEditorInGroup",
        "workbench.action.openPreviousRecentlyUsedEditorInGroup",
        "workbench.action.quickOpenView"
    ],

    "tslint.run": "onSave",
    "tslint.enable": false,

    "editor.wordBasedSuggestions": false,

    "files.autoSave": "onFocusChange",
    "typescript.check.tscVersion": false,
    "typescript.check.workspaceVersion": false,

    "extensions.autoUpdate": true,

    "go.gopath": "/Users/roblou/code/go",

    "npm-intellisense.scanDevDependencies": true,

    "vscode-stocks.stockSymbols": [
        "msft"
    ],
    "vscode-stocks.useColors": true,

    "terminal.integrated.shellArgs.osx": ["-l"],

    "editor.renderIndentGuides": true,

    "files.hotExit": "onExitAndWindowClose",
    "workbench.activityBar.visible": false,

    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.visibility": "ondemand",
    "workbench.welcome.enabled": true,

    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "on",

    "debug.inlineValues": true,

    "workbench.editor.tabCloseButton": "left",

	"window.newWindowDimensions": "inherit",
    "workbench.iconTheme": "vs-seti",
    "editor.wordWrap": "off",
    "editor.minimap.enabled": true,
	"window.title": "${dirty} ${activeEditorName}${separator}${rootName}",
    "window.zoomLevel": 0,

    "terminal.integrated.scrollback": 10000,

    "editor.dragAndDrop": true,

    "explorer.openEditors.visible": 0,

    "editor.formatOnPaste": true
}