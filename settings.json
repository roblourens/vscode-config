{
    "[Log]": {
        "editor.minimap.enabled": false,
        "editor.fontLigatures": false
    },
    "[javascript]": {
        "launch": {
            "configurations": [
                {
                    "name": "Default Launch Program",
                    "program": "${file}",
                    "protocol": "inspector",
                    "request": "launch",
                    "type": "node"
                }
            ]
        }
    },
    "[markdown]": {
        "editor.quickSuggestions": false,
        "editor.wordWrap": "on"
    },

    "azure.resourceFilter": [
        "72f988bf-86f1-41af-91ab-2d7cd011db47/9b16b0df-65b6-46d3-b9c9-e4fbc86b1fa7"
    ],

	"debug.allowBreakpointsEverywhere": true,

    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,

    "disableLigatures.mode": "Line",
    "docker.showExplorer": false,

    "editor.autoIndent": true,
    "editor.cursorBlinking": "solid",
    "editor.dragAndDrop": true,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.multiCursorModifier": "alt",
    "editor.renderIndentGuides": true,
    "editor.wordWrap": "off",

    "explorer.openEditors.visible": 0,

    "extensions.autoUpdate": true,
    "extensions.ignoreRecommendations": true,

    "files.associations": {
        "*.tokens": "json",
        "*.tree": "json"
    },
    "files.autoSave": "onFocusChange",
    "files.hotExit": "onExitAndWindowClose",
    "files.trimTrailingWhitespace": true,

    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "gitlens.codeLens.enabled": false,

    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": true,
        "suppressWelcomeNotice": false
    },

    "go.gopath": "/Users/roblou/code/go",

    "markdown.preview.markEditorSelection": true,

    "php.executablePath": "/usr/local/Cellar/php71/7.1.4_16/bin/php",
    "php.suggest.basic": false,

    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shellArgs.osx": [
        "-l"
    ],

    "tslint.run": "onSave",

    "typescript.referencesCodeLens.enabled": false,
    "typescript.tsserver.log": "verbose",

    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "one",
    "window.title": "${dirty} ${activeEditorShort}${separator}${rootName}",

    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Monokai",
    "workbench.editor.labelFormat": "medium",
    "workbench.editor.showTabs": false,
    "workbench.editor.tabCloseButton": "left",

    // "workbench.settings.naturalLanguageSearchEndpoint": "https://vscodeextension.search.windows.net/indexes/vscodeindex/docs",
    // "workbench.settings.naturalLanguageSearchKey": "400385A37E7AA311A97B3D3CF1EE346E",
	"workbench.settings.enableNaturalLanguageSearchFeedback": true,
    "workbench.settings.naturalLanguageSearchAutoIngestFeedback": true,

    "debug.showInStatusBar": "always",
    "window.zoomLevel": 0,
    "explorer.confirmDragAndDrop": false
}